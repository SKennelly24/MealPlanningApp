<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_item_title"
        android:textSize="25sp"
        android:textColor="#000000"/>

    <RadioGroup
        android:id="@+id/radioButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RadioButton
            android:id="@+id/produceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/small_produce"
            android:drawableRight="@drawable/small_produce"
            android:text="@string/grocery_type_0"
            android:textSize="20sp"
            android:scaleX="0.7"
            android:scaleY="0.7"/>


        <RadioButton
            android:id="@+id/cannedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/grocery_type_1"
            android:drawableRight="@drawable/small_can"
            android:drawableEnd="@drawable/small_can"
            android:textSize="20sp"
            android:scaleX="0.7"
            android:scaleY="0.7"/>

        <RadioButton
            android:id="@+id/meatButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/grocery_type_2"
            android:drawableRight="@drawable/small_meat"
            android:drawableEnd="@drawable/small_meat"
            android:textSize="20sp"
            android:scaleX="0.7"
            android:scaleY="0.7"/>

        <RadioButton
            android:id="@+id/dairyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/grocery_type_3"
            android:drawableRight="@drawable/small_dairy"
            android:drawableEnd="@drawable/small_dairy"
            android:textSize="20sp"
            android:scaleX="0.7"
            android:scaleY="0.7"/>

        <RadioButton
            android:id="@+id/frozenButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/grocery_type_4"
            android:drawableRight="@drawable/small_frozen"
            android:drawableEnd="@drawable/small_frozen"
            android:textSize="20sp"
            android:scaleX="0.7"
            android:scaleY="0.7"/>

        <RadioButton
            android:id="@+id/otherButton"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:text="@string/grocery_type_5"
            android:textSize="20sp" />

    </RadioGroup>

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/item_name"
        android:inputType="text"/>

</LinearLayout>